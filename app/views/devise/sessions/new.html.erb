<div class="well">
  <div class="row-fluid">
    <div class="span6">
      <h2>Login</h2>
      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <div class="row-fluid top10">
            <div class="span8">
              <%= f.text_field :email, :autofocus => true, :placeholder => "Username or email",:class=>"input-block-level" %>
            </div>
          </div>

          <div class="row-fluid top10">
            <div class="span8">
              <%= f.password_field :password, :placeholder => "Password", :class=>"input-block-level" %>
            </div>
          </div>
          <div class="row-fluid top10">
              <div class="span8">
                  <% if devise_mapping.rememberable? %>
                       <%= f.label :remember_me,:class=>"pull-left" %><%= f.check_box :remember_me,:class=>"pull-left",:style=>"margin-left:20px;" %>
                  <% end %>
              </div>
          </div>

          <div class="row-fluid top10" style="margin-top:20px;">
            <div class="span8">
              <%= f.submit "Login",:class=>"btn btn-primary" %>
              <%= link_to "Forgot your password?", new_password_path(resource_name),:class=>"btn btn-info" %><br />
            </div>
          </div>
      <% end %>
    </div>
  </div>
</div>