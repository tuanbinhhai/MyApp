<div class="container">
    <h1 class="title-header">Listing Products</h1>
    <table class="table table-striped table-hover">
      <thead>
        <tr style="color:white;">
          <th>Name</th>
          <th>Price</th>
          <th>Description</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @products.each do |product| %>
          <tr>
            <td><%= product.name %></td>
            <td><%= product.price %></td>
            <td style="word-wrap:break-word;"><%= product.description %></td>
            <td><%= link_to '', product, :class => 'btn-primary', :remote => true %></td>
            <td>
                <%= link_to image_tag('edit_icon.png'), edit_product_path(product), :title => 'Edit' %>
                <%= link_to image_tag('delete_icon.png'),product_path(product), method: :delete, :title=>"Delete", :remote=> false, data: { confirm: 'Are you sure you want to delete ?' } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    
    <%= button_to "New Product", new_product_path, method: :get, :class=>"btn btn-primary" %>
</div>

<script type="text/javascript">
    product = new ProductForm();
</script>
